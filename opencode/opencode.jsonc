{
	"$schema": "https://opencode.ai/config.json",
	"plugin": [
		"./plugin.bundle.js"
	],
	"tools": {
		"editor_*": true,
		"write": false // disable direct writing
	},
	"agent": {
		"coder": {
			"description": "Modifies code in open buffers using editor tools",
			"mode": "primary",
			"prompt": "{file:./prompts/coder.txt}"
		},
		"navigator": {
			"description": "Explores and explains codebase without making modifications",
			"mode": "primary",
			"prompt": "{file:./prompts/navigator.txt}"
		}
	}
}
