{
	"$schema": "https://opencode.ai/config.json",
	"plugin": [
		"./plugin.bundle.js"
	],
	"tools": {
		"editor_*": true,
		"write": false // disable direct writing
	},
	"agent": {
		"nvim-assist": {
			"description": "Modifies code in open buffers using editor tools",
			"mode": "primary",
			"prompt": "{file:./prompts/system.txt}"
		}
	}
}
